<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
            android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_ble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="66px"
        android:background="@color/black"/>


    <TextView
        android:id="@+id/tv_ble_statu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="66px"
        android:background="@color/black"/>


    <Button
        android:id="@+id/bt_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定授权全部权限了，点击初始化并搜索匹配蓝牙"/>

    <Button
        android:id="@+id/bt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索匹配蓝牙" />


    <Button
        android:id="@+id/bt_disconnected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="断开连接"/>

    <Button
        android:id="@+id/bt_send_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送测试数据" />

    <Button
        android:id="@+id/bt_send_test_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送测试图片" />

    <Button
        android:id="@+id/bt_send_test_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送测试进度条" />

    <Button
        android:id="@+id/bt_send_test_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送测试文件" />
    <ImageView
        android:id="@+id/ivv"
        android:layout_width="400px"
        android:layout_height="640px"
        android:background="@color/black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="66px"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="66px"
            android:background="@color/black"/>

    </ScrollView>

</LinearLayout>